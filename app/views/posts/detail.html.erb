<div class="schedule">
    <h2>スケジュール詳細</h2>
    <table>
        <tr>
            <th>タイトル</th>
            <td><%=@schedule.title %></td>
        </tr>
        <tr>
            <th>開始日</th>
            <td><%=@schedule.start %></td>
        </tr>
        <tr>
            <th>終了日</th>
            <td><%=@schedule.end %></td>
        </tr>
        <tr>
            <th>終日</th>
         <% if @schedule.day == true %>
         <td>〇</td>
         <% else %>
         <td></td>
         <% end %>
        </tr>
        <tr>
            <th>スケジュールメモ</th>
            <td></td>
        </tr>
        </tr>
    </table>
    <ul>
        <li><%=link_to("スケジュール一覧に戻る","/") %></li>
        <li><%=link_to("スケジュールを編集する", "/edit/#{@schedule.id}") %></li>
        <li></li>
    </ul>
</div>