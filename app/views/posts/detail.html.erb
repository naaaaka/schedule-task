<div class="schedule">
    <h2>スケジュール詳細</h2>
    <table>
        <tr>
            <th>タイトル</th>
            <td><%=@schedule.title %></td>
        </tr>
        <tr>
            <th>開始日</th>
            <td><%=@schedule.start %></td>
        </tr>
        <tr>
            <th>終了日</th>
            <td><%=@schedule.end %></td>
        </tr>
        <tr>
            <th>終日</th>
         <% if @schedule.day == 1 %>
         <td>〇</td>
         <% else %>
         <td></td>
         <% end %>
        </tr>
        <tr>
            <th>スケジュールメモ</th>
            <td><%=@schedule.memo %></td>
        </tr>
        </tr>
    </table>
    <ul>
        <li><%=link_to("スケジュール一覧に戻る","/") %></li>
        <li><%=link_to("スケジュールを編集する", "/#{@schedule.id}/edit") %></li>
        <li><%=link_to("スケジュールを削除する", "/#{@schedule.id}/delete",{method: "post"})%></li>
    </ul>
</div>