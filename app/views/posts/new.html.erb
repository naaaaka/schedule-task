<div class="schedule">
    <h2>スケジュール新規登録</h2>
    <%= form_tag("/create") do %>
        <table>
            <tr>
                <th>タイトル</th>
                <td><input type="text" class="cell" name="title"></td>
            </tr>
            <tr>
                <th>開始日</th>
                <td><input type="date" name="start" class="cell"></td>
            </tr>
            <tr>
                <th>終了日</th>
                <td><input type="date" name="end" class="cell"></td>
            </tr>
            <tr>
                <th>終日</th>
                <td><input type="checkbox" value=true name="day" class="cell">
                <br>終日の場合はチェックを入れます</td>
            </tr>
            <tr>
                <th>スケジュールメモ</th>
                <td><input type="text" class="cell memo"></td>
            </tr>
        </table>
        <div>
            <input type="submit" value="スケジュールを新規登録する">
        </div>
    <% end %>
    <a href="/">スケジュール一覧に戻る</a>
</div>